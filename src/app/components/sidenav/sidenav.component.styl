.sidenav-container
  height 100%

.sidenav
  top 56px
  width 225px

.toolbar
  position fixed
  top 0
  z-index 2

.spacer
  flex 1 1 auto

.avatar
  height 40px
  width 40px
  border-radius 50%
  flex-shrink 0
  object-fit cover

.sidenav-menu
  height 140px
  background #d6115dd4
  padding 20px 10px 10px
  width 100%
  position relative
  box-sizing border-box
  display grid
  grid-auto-rows 60px 1fr
  align-items end

.menu-avatar
  height 60px
  width 60px

.menu-name
  margin 0
